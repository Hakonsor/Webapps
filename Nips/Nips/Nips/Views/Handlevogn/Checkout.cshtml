@model Nips.Model.Entities.Kvittering

@{
    ViewBag.Title = "CheckOut";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/DisableButton.js"></script>

<head>
    <link href="~/Content/Custom/Main.css" rel="stylesheet" type="text/css" />
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="jumbotron">
        <h2>Check Out</h2>
        <hr />
        <h4>Mottaker:</h4>
        <hr />
        <div id="orderForm"></div>
        <div class="form-group">
        <b>Fornavn: </b> @ViewBag.Kunde.fornavn
        </div>
        <div class="form-group">
        <b>Etternavn: </b> @ViewBag.Kunde.etternavn
        </div>
        <div class="form-group">
        <b>Email: </b> @ViewBag.Kunde.email
        </div>
        <div class="form-group">
        <b>Tlf: </b> @ViewBag.Kunde.tlf
        </div>
        <div class="form-group">
        <b>Adresse: </b> @ViewBag.Kunde.adresse
        </div>
        <div class="form-group">
        <b>Postnr: </b> @ViewBag.Kunde.postnr
        </div>
        <div class="form-group">
        <b>Poststed: </b> @ViewBag.Kunde.poststed
        </div>
        <hr />

        <!--BETALING-->
        <h4>Betaling:</h4>
        <hr />
        <div class="container">
            <div class='form-row'>
                <div class='col-xs-4 form-group name-first required'>      
                <label class='control-label'>Fornavn</label>                      
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Fornavn" } })
                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
                </div>
                <div class='col-xs-4 form-group name-first required'>
                <label class='control-label'>Etternavn</label>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Etternavn" } })
                @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
                </div>
                <div class='form-row'>
                <div class='col-xs-12 form-group card required'>
                        <label class='control-label'>Kortnummer</label>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.kortnr, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Kortnummer" } })
                        @Html.ValidationMessageFor(model => model.kortnr, "", new { @class = "text-danger" })
                    </div>    
                </div>
            </div>
            <div class='form-row'>
                <div class='col-xs-4 form-group cvc required'>
                    <label class='control-label'>Sikkerhetskode</label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.cvv, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "CVV" } })
                    @Html.ValidationMessageFor(model => model.cvv, "", new { @class = "text-danger" })
                </div>
                <div class='col-xs-4 form-group expiration required'>
                    <label class='control-label'>Utløpsdato Måned</label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.mm, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "MM" } })
                    @Html.ValidationMessageFor(model => model.mm, "", new { @class = "text-danger" })
                </div>
                <div class='col-xs-4 form-group expiration required'>
                    <label class='control-label'>Utløpsdato År</label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.yy, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "YY" } })
                    @Html.ValidationMessageFor(model => model.yy, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class='form-row'>
                <div class='col-md-12 form-group'>           
                        <button a href="/Handlevogn/Kvittering" type="submit" class="btn btn-primary" tabindex="11">
                            Kjøp
                        <i class="glyphicon glyphicon-pencil"></i>  Betal
                        </button>                              
                </div>
            </div>
        </div>
    </div>
    </div>
    
}







