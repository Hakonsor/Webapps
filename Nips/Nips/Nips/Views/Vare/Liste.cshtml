@model IEnumerable<Nips.Model.Entities.Produkt>

@{
    ViewBag.Title = "Liste";
}
<link href="~/Content/Custom/Main.css" rel="stylesheet" />

<div class="container">
    <div class="jumbotron">
        <div class="formTitle">
            <h2><span class="glyphicon glyphicon-th-list"></span> Liste over varer</h2>
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3"> </div>
        </div>
        <hr />
            <input type="button" value="Opprett nytt produkt" onclick="location.href='@Url.Action("Registrer", "Vare")'" />
            <input type="button" value="Tilbake til admin" onclick="location.href='@Url.Action("Admin", "Order")'" />
            <p></p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.navn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.beskrivelse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pris)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.antall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.kategori)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.navn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.beskrivelse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pris)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.antall)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.kategori)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                    </td>
                    <td>
                        @Html.ActionLink("Endre", "Endre", new { id = item.id }) ||
                        @Html.ActionLink("Slett", "Slett", new { id = item.id })
                    </td>
                </tr>
            }
        </table>
        </div>
        </div>
