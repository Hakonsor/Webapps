@model Nips.Model.Entities.Kunde

@{
    ViewBag.Title = "Registrer";
}
<link href="~/Content/Custom/Main.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.9.0.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#verify').keyup(function () {
            if ($(this).val() == $('#password').val()) {
                $('#verifynote').addClass('hidden');
            }
            else {
                $('#verifynote').removeClass('hidden');
            }
        });
    });
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="jumbotron">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                        <div class="formTitle">
                            <h2><span class="glyphicon glyphicon-registration-mark"></span> Registrer ny bruker</h2>
                            <hr style="border-top:1px solid #9e9e9e" />

                            <form role="form">
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Fornavn", tabindex = "1", autofocus = "" } })
                                            @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.etternavn, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Etternavn", tabindex = "2" } })
                                            @Html.ValidationMessageFor(model => model.etternavn, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">

                                    @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Adresse", tabindex = "3" } })
                                    @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.postnr, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Postnummer", tabindex = "4" } })
                                            @Html.ValidationMessageFor(model => model.postnr, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.poststed, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Poststed", tabindex = "5" } })
                                            @Html.ValidationMessageFor(model => model.poststed, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "E-postadresse", tabindex = "6" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    @if (ViewBag.email != null)
                                    {
                                        <div class="alert alert-danger" role="alert">I bruk av annen bruker, velg en annen mail adresse</div>
                                    }

                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.tlf, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Telefonnummer", tabindex = "7" } })
                                    @Html.ValidationMessageFor(model => model.tlf, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">

                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">

                                            @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @class = "form-control input-lg", type = "password", id = "password", placeholder = "Passord", tabindex = "9" } })
                                            @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                                        </div>
                                        <h6>Passordet må ha minst 8 tegn</h6>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">

                                            <input type="password" name="password_confirmation" class="form-control input-lg" placeholder="Bekreft passord" tabindex="10"><span id="verifynote" class="warn hidden" style="color:red">Passordet er feil!</span>
                                            @if (ViewBag.confirmation != null)
                                            {
                                                <div class="alert alert-danger" role="alert">Ikke korrekt</div>
                                            }

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" tabindex="11">
                                                <i class="glyphicon glyphicon-pencil"></i>  Registrer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
    </div>
        </div>  
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
