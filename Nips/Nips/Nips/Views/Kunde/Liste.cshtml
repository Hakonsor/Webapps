@model IEnumerable<Nips.Model.Entities.Kunde>
@using PagedList.Mvc
@{
    ViewBag.Title = "Liste over brukere";
   // SelectList itemsPerPageList = DefaultValues.ItemsPerPageList;
}

<link href="~/Content/Custom/Main.css" rel="stylesheet" />

<div class="container">
    <div class="jumbotron">
                <div class="formTitle">
                    <h2><span class="glyphicon glyphicon-list"></span> Liste over kunder</h2>
                    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3"> </div>
                </div>
                <hr />
                <input type="button" value="Vis ordere" onclick="location.href='@Url.Action("Admin", "Order")'" />
                <input type="button" value="Vis varer" onclick="location.href='@Url.Action("Liste", "Vare")'" />
                <p></p>
        <div class="form-group">
            @using (Html.BeginForm("Liste", "Kunde", FormMethod.Get, new { @class = "form-group", @role = "form" }))
            {
                <hr style="border-top:1px solid rgb(221, 221, 221);" />
                <div class="input-group pull-left">
                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { id = "txtSearch", @class = "form-control", placeholder = "Søk etter kunde" })
                </div>                    
                                <button class="btn btn-primary" type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>                         
                         }
                        </div>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.kundeid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fornavn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.etternavn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tlf)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.adresse)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.postnr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.poststed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.admin)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.kundeid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fornavn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.etternavn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tlf)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adresse)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postnr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.poststed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.admin)
                            </td>
                            <td>

                                @Html.ActionLink("Endre", "Endre", new { id = item.kundeid }) |
                                @Html.ActionLink(" ", "Detaljer", new { id = item.kundeid }) |
                                @Html.ActionLink("Slett", "Slett", new { id = item.kundeid })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

