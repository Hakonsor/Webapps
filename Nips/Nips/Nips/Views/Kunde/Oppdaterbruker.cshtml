@model Nips.Model.Entities.Kunde

@{
    ViewBag.Title = "Oppdaterbruker";
}

<link href="~/Content/Custom/Main.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <h3>
                            <span class="glyphicon glyphicon-user"></span> Oppdater din brukerinfo
                        </h3>
                        <hr />
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.fornavn, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "1" } })
                                    @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.etternavn, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.etternavn, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "2" } })
                                    @Html.ValidationMessageFor(model => model.etternavn, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "3" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.tlf, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.tlf, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "3" } })
                                    @Html.ValidationMessageFor(model => model.tlf, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.adresse, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "4" } })
                                    @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.postnr, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.postnr, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "5" } })
                                    @Html.ValidationMessageFor(model => model.postnr, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.poststed, htmlAttributes: new { @class = "control-label col-md-2" })

                                    @Html.EditorFor(model => model.poststed, new { htmlAttributes = new { @class = "form-control input-lg", tabindex = "6" } })
                                    @Html.ValidationMessageFor(model => model.poststed, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="passord" value="hackestuff">
                        </div>
                        @if (ViewBag.ok != null)
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.ok</div>
                        }
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Oppdater brukerinfo" class="btn btn-success" tabindex="7" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}