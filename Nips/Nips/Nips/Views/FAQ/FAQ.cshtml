
@{
    ViewBag.Title = "FAQ";
}

        
            <link href="~/Content/Custom/Main.css" rel="stylesheet" type="text/css" />
            <script src="../../Scripts/angular.js"></script>
            <script src="~/Scripts/App/faqController.js"></script>
            <title></title>
            <meta charset="utf-8" />
        
        <div>
            <div class="container">
                <div class="jumbotron">
                    <div ng-controller="faqController">
                        <h2>FAQ</h2>
                        <table>                            
                                <tr>
                                    <td><p>Hvordan har jeg implementert databasen i Individuell oppgave?</p></td>
                                    <td><p>Hvordan har jeg implemetert angular?</p></td>
                                    <td><p>Hvor finner jeg API-controlleren?</p></td>
                                    <td><p>Hvor finner jeg angular controlleren?</p></td>
                                    <td><p>Hvorfor ser dette ut som MCV</p></td>
                                    <td><p>Hvorfor skal jeg bli imponert av dette?</p></td>
                                </tr>
                        </table>
                        
                            <table>
                                <tr>
                                    <td>Epost:<input placeholder="Epostadresse" name="emailadresse" ng-model="email"></td>
                                </tr>
                                <tr>
                                    <td>
                                        <textarea placeholder="Skriv spørsmål her" name="testfelt" rows="6" cols="70" ng-model="beskrivelse"> </textarea>
                                    </td>
                                </tr>
                            </table>
                            <button ng-click="lagreSporsmal()">Send Sporsmal</button>
                        
                        <br />
                        <table>
                            <thead>
                                <tr>
                                    Spørsmål ifra kunder
                                </tr>
                            </thead>
                            <tbody ng-repeat="sporsmal in alleSporsmal">
                                <tr>
                                    <td>Epost: {{sporsmal.email}}<br />  <textarea disabled rows="6" cols="70">{{sporsmal.Beskrivelse}}</textarea></td>
                                </tr>
                                <tr>
                                    <td>
                                        <button class="btn btn-danger" ng-click="slettSporsmal(sporsmal.id)">Slett</button>
                                        <button class="btn btn-success" ng-click="endreSporsmal(sporsmal.id)">Endre</button>
                                    </td>
                                 </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>      
        </div>
